.btn-primary
  background-color #08ac8c !important

.jumbotron .btn
  border .125rem solid #fff
  background-color transparent
  margin 1.5rem .5rem
  padding .5rem 1rem
  font-weight bold
  font-size 1.2rem
  transition .15s background-color
  text-shadow none

  &:hover,
  &:focus
    background-color #fff !important
    color #000 !important
    text-shadow none
    transition .15s background-color

  &:active
    background-color #000 !important
    color #fff !important
    transition .15s background-color

.jumbotron
  background-image url("../media/background.jpg")
  background-filter blur(5px)
  background-attachment fixed
  border-radius 0 !important // Remove default .jumbotron border-radius
  height 100vh
  min-height 40rem
  color #fff
  margin 0 -15px // Remove margin on sides
  text-shadow .1rem .1rem .25rem #000
  h1
    margin-top 25vh
    font-size 5rem
    font-family "Lato Regular", sans-serif
    text-align center

  h2
    font-size 2.5em
    font-family "Lato Regular", sans-serif
    text-align center

@media (max-width 768px)
  .jumbotron
    h1
      margin-top 1em

@media (max-width 900px)
  .jumbotron
    h1
      font-size 4em

    h2
      font-size 2em
