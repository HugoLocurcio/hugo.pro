.portfolio a,
.portfolio a:hover,
.portfolio a:focus,
.portfolio a:active
  border-bottom none

.portfolio a
  margin-bottom 1rem

.portfolio img
  width 100%

.portfolio p
  background-color transparent
  color transparent
  position absolute
  font-weight bold
  text-transform uppercase
  font-size 1.5em
  display flex
  justify-content center
  align-items center
  height 100%
  width calc(100% - 30px)
  margin 0
  transition .25s

  &:hover
    background-color rgba(#18bc9c, 0.9)
    color #fff
    transition .25s
